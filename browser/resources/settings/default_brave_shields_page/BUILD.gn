import("//third_party/closure_compiler/compile_js.gni")
import("//tools/polymer/polymer.gni")
import("//tools/polymer/html_to_js.gni")
import("//ui/webui/resources/tools/js_modulizer.gni")
import("../settings.gni")

# HTML Imports compatible compiles

js_type_check("closure_compile") {
  deps = [
    ":default_brave_shields_browser_proxy",
  ]
}

js_library("default_brave_shields_browser_proxy") {
  deps = [
    "//ui/webui/resources/js:cr",
  ]
  externs_list = [
    "$externs_path/chrome_send.js",
  ]
}

# ES Module compatible compiles

js_type_check("closure_compile_module") {
  is_polymer3 = true
  closure_flags = settings_closure_flags
  deps = [
    ":default_brave_shields_browser_proxy.m",
    ":default_brave_shields_page",
  ]
}

js_library("default_brave_shields_browser_proxy.m") {
  deps = [
    "//ui/webui/resources/js:cr.m",
  ]
  externs_list = [
    "$externs_path/chrome_send.js",
  ]
  extra_deps = [
    ":modulize",
  ]
}

js_library("default_brave_shields_page") {
  deps = [
    ":default_brave_shields_browser_proxy.m",
    "//chrome/browser/resources/settings:i18n_setup",
    "//chrome/browser/resources/settings:settings_shared_css_module",
    "//chrome/browser/resources/settings:settings_vars_css_module",
    "//third_party/polymer/v3_0/components-chromium/polymer:polymer_bundled",
    "//ui/webui/resources/cr_elements:md_select_css_module",
  ]
}

group("web_modules") {
  public_deps = [
    ":modulize",
    ":templatize",
  ]
}

html_to_js("templatize") {
  js_files = ["default_brave_shields_page.js"]
}

js_modulizer("modulize") {
  input_files = ["default_brave_shields_browser_proxy.js"]
  namespace_rewrites = settings_namespace_rewrites
}

